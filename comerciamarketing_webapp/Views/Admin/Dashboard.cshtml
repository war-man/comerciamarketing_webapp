@model List<comerciamarketing_webapp.Controllers.AdminController.CustomVisit>
@{
    ViewBag.title = "Comercia Marketing - Admin Dashboard";

    var modelcount = Model.Count();
    if (modelcount == 0)
    {
        modelcount = 1;
    }
}


