@model comerciamarketing_webapp.Models.Usuarios

@{
    ViewBag.Title = "Comercia Marketing";
}

<div class="container single_product_container">
    <div class="row">
        <div class="col">

            <!-- Breadcrumbs -->

            <div class="breadcrumbs d-flex flex-row align-items-center">
                <ul>
                    <li><a href="@Url.Action("Main", "Home")">Inicio</a></li>
                    <li class="active"><a href="@Url.Action("Index", "Usuarios")"><i class="fa fa-angle-right" aria-hidden="true"></i>Usuarios</a></li>

                </ul>
            </div>

    
                <h4>Detalles</h4>
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                       Correo
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.correo)
                    </dd>

                    <dt>
                        Usuario
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.usuario)
                    </dd>

                    <dt>
                        Contraseña
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.contrasena)
                    </dd>

                    <dt>
                        ID de Cliente en SAP
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.ID_clienteSAP)
                    </dd>

                    <dt>
                        Nombre de Cliente en SAP
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.NOM_clienteSAP)
                    </dd>

                    <dt>
                        Visitas totales
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.contador_visitas)
                    </dd>

                    <dt>
                       Última visita
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.fultima_visita)
                    </dd>

                    <dt>
                        Usuario desde
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.fcreacion_usuario)
                    </dd>

                    <dt>
                       Tipo de membresía
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Tipo_membresia.descripcion)
                    </dd>

                </dl>
           
            <p>
                @Html.ActionLink("Editar", "Edit", new { id = Model.ID_usuario }) |
                @Html.ActionLink("Volver", "Index")
            </p>
            </div>
</div>
</div>