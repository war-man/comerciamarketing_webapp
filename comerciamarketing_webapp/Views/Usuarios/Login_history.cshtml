@model IEnumerable<comerciamarketing_webapp.Models.historial_conexiones>

@{
    ViewBag.Title = "Comercia Marketing";
}
<div class="container single_product_container">
    <div class="row">
        <div class="col">

            <!-- Breadcrumbs -->

            <div class="breadcrumbs d-flex flex-row align-items-center">
                <ul>
                    <li><a href="@Url.Action("Main", "Home")">Home</a></li>
                    @if (ViewBag.modulo == "customers")
                    {
                        <li><a href="@Url.Action("Index", "Empresas")"><i class="fa fa-angle-right" aria-hidden="true"></i>Customers</a></li>
                    }
                    else {
                        <li><a href="@Url.Action("Demo_users", "Home")"><i class="fa fa-angle-right" aria-hidden="true"></i>Demos</a></li>
                    }
                    <li class="active"><a href="#"><i class="fa fa-angle-right" aria-hidden="true"></i>Login History</a></li>

                </ul>
            </div>
            <h4>User: @ViewBag.CorreoUsuario</h4>
            <hr />
            <table class="table" style="overflow-x:auto;">
                <tr>
                    <th>
                        IP
                    </th>
                    <th>
                        Continent Name
                    </th>
                    <th>
                        Country Name
                    </th>
                    <th>
                        Region Name
                    </th>
                    <th>
                        City
                    </th>

                    <th>
                        Date
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {

                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ip)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.continent_name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.country_name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.region_name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.city)

                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.fecha_conexion)

                    </td>
                    <td>
                        @if (ViewBag.modulo == "customers")
                        {
                            @Html.ActionLink("More details", "Details_loginhistory", new { id = item.ID_historial, modulo= "customers" }) 
                        }
                        else {
                            @Html.ActionLink("More details", "Details_loginhistory", new { id = item.ID_historial, modulo= "demos" }) 
                        }
                    </td>
                </tr>
                }


            </table>
            <p>
                @if (ViewBag.modulo == "customers")
                {
                    @Html.ActionLink("Back", "Index", new { ID_Empresa = ViewBag.ID_empresaback })
                }
                else {
                    @Html.ActionLink("Back", "Demo_users")
                }
            </p>
        </div>
    </div>
</div>
