@model comerciamarketing_webapp.Models.Usuarios

@{
    ViewBag.Title = "Comercia Marketing";
}

<div class="container single_product_container">
    <div class="row">
        <div class="col">

            <!-- Breadcrumbs -->

            <div class="breadcrumbs d-flex flex-row align-items-center">
                <ul>
                    <li><a href="@Url.Action("Main", "Home")">Inicio</a></li>
                    <li class="active"><a href="@Url.Action("Index", "Usuarios")"><i class="fa fa-angle-right" aria-hidden="true"></i>Usuarios</a></li>

                </ul>
            </div>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h6>Editar usuario</h6>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.ID_usuario)

                <div class="form-group">
                    <p class="control-label col-md-2">Usuario</p>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.usuario, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                        @Html.ValidationMessageFor(model => model.usuario, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <p class="control-label col-md-2">Contraseña</p>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.contrasena, new { htmlAttributes = new { @class = "form-control", @required = "required", @type = "password" } })
                        @Html.ValidationMessageFor(model => model.contrasena, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <p class="control-label col-md-2">Correo</p>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.correo, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.correo, "", new { @class = "text-danger" })
                    </div>
                </div>



                <div class="form-group">
                    <p class="control-label col-md-4">ID de Cliente en SAP</p>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.ID_clienteSAP, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.ID_clienteSAP, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <p class="control-label col-md-6">Nombre de Cliente en SAP</p>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.NOM_clienteSAP, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.NOM_clienteSAP, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <p class="control-label col-md-6">Tipo de membresía</p>
                    <div class="col-md-10">
                        @Html.DropDownList("ID_tipomembresia", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.ID_tipomembresia, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                 
                    <div class="col-md-10">
                        @Html.HiddenFor(model => model.contador_visitas, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.contador_visitas, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
             
                    <div class="col-md-10">
                        @Html.HiddenFor(model => model.fultima_visita, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.fultima_visita, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    
                    <div class="col-md-10">
                        @Html.HiddenFor(model => model.fcreacion_usuario, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.fcreacion_usuario, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <p class="control-label col-md-4">Usuario activo</p>
                    <div class="col-md-10">
                        <div class="checkbox">
                            @Html.EditorFor(model => model.activo)
                            @Html.ValidationMessageFor(model => model.activo, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Guardar" class="btn btn-default" />
                    </div>
                </div>
            </div>
            }
</div>
</div>
</div>