            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Registration Form.</h4>
                <h5>Complete all the information.</h5>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    <p class="control-label col-md-2">Email *</p>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.correo, new { htmlAttributes = new { @class = "form-control", @required = "required", @type = "email", @maxlength = "150" } })
                        @Html.ValidationMessageFor(model => model.correo, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <p class="control-label col-md-2">Password *</p>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.contrasena, new { htmlAttributes = new { @class = "form-control", @required = "required", @type = "password", @maxlength = "50" } })
                        @Html.ValidationMessageFor(model => model.contrasena, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <p class="control-label col-md-2">Name *</p>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control", @required = "required", @maxlength = "150" } })
                        @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <p class="control-label col-md-2">Last name *</p>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.apellido, new { htmlAttributes = new { @class = "form-control", @required = "required", @maxlength = "150" } })
                        @Html.ValidationMessageFor(model => model.apellido, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <p class="control-label col-md-2">Company *</p>
                    <div class="col-md-10">
                        <input type="text" class="form-control" required maxlength="150" name="customer" id="customer" />
                    </div>
                </div>

                <div class="form-group">
                    <p class="control-label col-md-2">Position</p>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.cargo, new { htmlAttributes = new { @class = "form-control", @maxlength = "100" } })
                        @Html.ValidationMessageFor(model => model.cargo, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <p class="control-label col-md-2">Telephone number</p>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.telefono, new { htmlAttributes = new { @class = "form-control", @maxlength = "50" } })
                        @Html.ValidationMessageFor(model => model.telefono, "", new { @class = "text-danger" })
                    </div>
                </div>

                <input type="hidden" id="estados_influencia" name="estados_influencia" />
                <div class="form-group">
                    <p class="control-label col-md-12">Coverage Area (States covered by Comercia with your brand)</p>
                    <div class="col-md-12">
                        <select multiple="multiple"  id="estados">
