
@{
    ViewBag.Title = "Demos";
}
<div class="fs_menu_overlay"></div>
<div class="container product_section_container">
    <div class="row">
        <div class="col product_section clearfix">

            <!-- Breadcrumbs -->

            <div class="breadcrumbs d-flex flex-row align-items-center">
                <ul>
                    <li><a href="@Url.Action("Main", "Home")">Home</a></li>
                    <li class="active"><a href="#"><i class="fa fa-angle-right" aria-hidden="true"></i>Demos</a></li>
                </ul>
            </div>

            <!-- Sidebar -->

            <div class="sidebar">
                <div class="sidebar_section">

                    <div class="sidebar_title">
                        <h5>General</h5>
                    </div>
                    <ul class="sidebar_categories">
                        <li><a href="#"><span><i class="fa fa-angle-double-right" aria-hidden="true"></i></span>Total users: </a></li>
                        <li><a href="#"><span><i class="fa fa-angle-double-right" aria-hidden="true"></i></span>Total demos: </a></li>
                        <li><a href="#"><span><i class="fa fa-angle-double-right" aria-hidden="true"></i></span>Pending demos: </a></li>

                    </ul>
                    
                </div>
                <div class="sidebar_section">

                    <div class="sidebar_title">
                        <h5>Demo settings</h5>
                    </div>
                    <div class="filter_button"><a href="@Url.Action("Demo_users", "Usuarios")"><span>Users</span></a></div>
                    <div class="filter_button"><span data-toggle="modal" data-target="#exampleModal">Forms</span></div>
                </div>
            </div>

            <!-- Main Content -->

            <div class="main_content">

                <!-- Products -->

                <div class="products_iso">
                    <div class="row">
                        <div class="col">
                            <!-- Product Sorting -->

                            <div class="product_sorting_container product_sorting_container_top">
                                <ul class="product_sorting">
                                    <li>
                                        <span class="type_sorting_text">Default Sorting</span>
                                        <i class="fa fa-angle-down"></i>
                                        <ul class="sorting_type">
                                            <li class="type_sorting_btn" data-isotope-option='{ "sortBy": "original-order" }'><span>Default Sorting</span></li>
                                            <li class="type_sorting_btn" data-isotope-option='{ "sortBy": "original-order" }'><span>Last 10 </span></li>
                                            <li class="type_sorting_btn" data-isotope-option='{ "sortBy": "price" }'><span>Pending demos</span></li>
                                            <li class="type_sorting_btn" data-isotope-option='{ "sortBy": "name" }'><span>Demos finished</span></li>
                                        </ul>
                                    </li>
                                    <li>
                                        <span>by user</span>
                                        <span class="num_sorting_text"></span>
                                        <i class="fa fa-angle-down"></i>
                                        <ul class="sorting_num">
                                            <li class="num_sorting_btn"><span>User 1</span></li>
                                            <li class="num_sorting_btn"><span>User 2</span></li>
                                            <li class="num_sorting_btn"><span>User 3</span></li>
                                        </ul>
                                    </li>
                                </ul>

                            </div>

                            <!-- Product Grid -->

                            <div class="product-grid">
                                <h4>Last demos</h4>
                                <table class="table" style="overflow-x:auto;">
                                    <tr>
                                        <th>
                                            Vendor
                                        </th>
                                        <th>
                                            Store
                                        </th>
                                        <th>
                                            Visit date
                                        </th>
                                        <th>
                                            User assigned
                                        </th>
                                        <th></th>
                                    </tr>
                                    <tr>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                    </tr>
                                </table>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Change password</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            @using (Html.BeginForm("Change_password", "Home", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

        <div class="modal-body">
            <p>Enter password</p>
            <input type="password" name="password" id="password" required oncopy="return false;"/>
            <hr />
            <div>
                <p>Enter new password</p>
                <input type="password" name="newpassword" id="newpassword" required onpaste="return false;" oncopy="return false;"/>
                <p>Enter new password again</p>
                <input type="password" name="retrypassword" id="retrypassword" required onpaste="return false;" oncopy="return false;"/>
                <span id='message'></span>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-primary" id="buttonsave">Save changes</button>
        </div>
            }
        </div>
    </div>
</div>

