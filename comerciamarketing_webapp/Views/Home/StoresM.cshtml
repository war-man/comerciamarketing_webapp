
@{
    ViewBag.Title = "Comercia Marketing - StoresM";
}
<!-- ############ Content START-->
<div id="content" class="flex ">
    <!-- ############ Main START-->
    <div>
        <div class="page-hero page-container " id="page-hero">
            <div class="padding d-flex">
                <div class="page-title">
                    <h2 class="text-md text-highlight">Stores</h2>
                    <small class="text-muted">
                        See all Stores from SAP to view their
                        <strong> marketing information</strong>
                    </small>
                </div>
                <div class="flex"></div>
                <div>
                    <a href="https://limenainc.sharepoint.com/sites/comercia/Lists/Customer%20Data/AllItems.aspx" target="_blank" class="btn btn-sm box-shadows btn-rounded gd-primary">ADD STORE<i class="" data-feather="plus-circle"></i></a>

                </div>
         
            </div>
        </div>
        <div class="page-content page-container" id="page-content">
            <div class="padding">
                <div class="row row-sm sr">
                    <div class="col-md-12 col-lg-12">
                        <div class="row row-sm">
                            <table id="datatable2" class="table table-theme table-row v-middle">
                                <thead>
                                    <tr>
                                        <th><span class="text-muted">ID</span></th>

                                        <th><span class="text-muted">NAME</span></th>
           

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in ViewBag.stores)
    {
                                <tr class="" data-id="@item.CardCode">
                                    <td style="min-width:30px;text-align:center">
                                        <small class="text-muted"> @item.CardCode</small>
                                    </td>

                                    <td class="flex">
                                        <a href="#" class="item-title text-color "> @item.CardName</a>
                                        <div class="item-except text-muted text-sm h-1x">
                                            <i class="" data-feather="map"></i> @item.MailAddres, @item.MailCity, @item.State2, @item.MailZipCod
                                        </div>
                                    </td>

                                </tr>
}
                                </tbody>
                            </table>




                        </div>
                    </div>




                </div>
            </div>
        </div>
    </div>
    <!-- ############ Main END-->
</div>
<!-- ############ Content END-->
<script>
    window.onload = function () {

            table = $('#datatable2').DataTable();
            table
                .order([1, 'asc'])
                .draw();


    };
</script>

