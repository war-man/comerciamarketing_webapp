@model IEnumerable<comerciamarketing_webapp.Models.RoutesM>
@{
    ViewBag.Title = "Comercia Marketing - RoutesM";
}
<div class="container-fluid page-body-wrapper">
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="container">
                <!--MAP-->
                <div class="row">
                    <div class="col-md-12 grid-margin">
                        <div class="accordion basic-accordion" id="accordion" role="tablist">
                            <div class="card">
                                <div class="card-header" role="tab" id="headingOne">
                                    <h6 class="mb-0">
                                        <a data-toggle="collapse" href="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
                                            <i class="card-icon mdi mdi-filter"></i>Filters
                                        </a>
                                    </h6>
                                </div>
                                <div id="collapseOne" class="collapse" role="tabpanel" aria-labelledby="headingOne" data-parent="#accordion">
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-md-4 grid-margin stretch-card">
                                                <div class="card">
                                                    <div class="card-body">
                                                        <h4 class="card-title">By Date</h4>
                                                        <div id="reportrange" style="background: #fff; cursor: pointer; padding: 5px 10px; border: 1px solid #ccc; width: 100%">
                                                            <i class="mdi mdi-calendar"></i>&nbsp;
                                                            <span></span> <i class="fa fa-caret-down"></i>
                                                        </div>

                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-4 grid-margin stretch-card">
                                                <div class="card">
                                                    <div class="card-body">
                                                        <h4 class="card-title">By Customer</h4>
                                                        <div class="form-group">
                                                            <select class="js-example-basic-multiple" multiple="multiple" style="width:100%">
                                                                @foreach (var itemCustomer in ViewBag.customers)
                                                    {
                                                        <option value="@itemCustomer.CardCode">@itemCustomer.CardCode - @itemCustomer.CardName</option>
                                        }
                                                            </select>
                                                        </div>

                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 grid-margin">
                        <div class="card">           
                                    <div class="col-md-12">
                                        <ul class="nav nav-tabs tab-simple-styled" role="tablist">
                                            <li class="nav-item">
                                                <a class="nav-link active" id="tab-3-1" data-toggle="tab" href="#home-3-1" role="tab" aria-controls="home-3-1" aria-selected="true"><i class="mdi mdi-truck"></i>Routes list</a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" id="tab-3-2" data-toggle="tab" href="#profile-3-2" role="tab" aria-controls="profile-3-2" aria-selected="false"><i class="mdi mdi-calendar"></i>Calendar</a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" id="tab-3-3" data-toggle="tab" href="#contact-3-3" role="tab" aria-controls="contact-3-3" aria-selected="false"><i class="mdi mdi-border-outside"></i>Timeline</a>
                                            </li>
                                        </ul>
                                        <div class="tab-content tab-content-basic">
                                            <div class="tab-pane fade show active" id="home-3-1" role="tabpanel" aria-labelledby="tab-3-1">
                                           <div class="row">
                                            <div class="col-md-12 grid-margin">
                                                <div class="card">
                                                     
                                                    <div class="card-body">
                                                        @if ((Session["tipousuario"].ToString() == "8" && Session["tiporol"].ToString() == "8") || Session["tipousuario"].ToString() == "1")
                                                        {
                                                    <a href="#" class="btn btn-success" data-toggle="modal" data-target="#createModal">Add Route<i class="mdi mdi-plus"></i></a>
                                                        }
                                                    <div class="row">
                                                        <div class="col-lg-12 table-responsive">
                                                            <table id="order-listing" class="table table-striped">
                                                                <thead>
                                                                    <tr>
                                                                        <th>ID</th>
                                                                        <th>Name</th>
                                                                        <th>Date</th>
                                                                        <th>Estimated completion date</th>
                                                                        <th>Status</th>

                                                                    </tr>
                                                                </thead>
                                                                <tbody>
                                                                    @foreach (var itemRuta in Model)
                {
                                                    <tr>
                                                        <td>
                                                            @itemRuta.ID_route

                                                        </td>
                                                        <td>
                                                            <i class="mdi mdi-truck-delivery icon-sm text-info"></i>
                                                            <a class="text-black" data-toggle="tooltip" data-placement="bottom" title="Go to route" href="@Url.Action("RoutesM_details", "Home", new { id=itemRuta.ID_route})">
                                                                @itemRuta.query2
                                                            </a>
                                                        </td>

                                                        <td>@itemRuta.date.ToLongDateString()</td>
                                                        <td>@itemRuta.end_date.ToLongDateString()</td>

                                                        <td>
                                                            <div class="d-flex justify-content-between mt-2">

                                                                <small>@itemRuta.query3%</small>
                                                            </div>
                                                            <div class="progress progress-sm mt-2">
                                                                <div class="progress-bar bg-success" role="progressbar" style="width: @itemRuta.query3%" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
                                                            </div>
                                                        </td>
                                                    </tr>
}
                                                                </tbody>
                                                            </table>
                                                        </div>
                                                    </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                            </div>
                                            <div class="tab-pane fade" id="profile-3-2" role="tabpanel" aria-labelledby="tab-3-2">
                                                <div class="row">

                                                    <div class="col-md-12 grid-margin">
                                                        <div class="card">
                                                            <div class="card-body">
                                                                <div class="col-md-12">
                                                                    <div id="calendar"></div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>

                                                </div>
                                            </div>
                                            <div class="tab-pane fade" id="contact-3-3" role="tabpanel" aria-labelledby="tab-3-3">
                                                Lorem ipsum dolor sit amet, consectetur adipisicing elit. Mollitia quibusdam assumenda fugit velit quis hic nulla necessitatibus? Nulla, possimus rerum quia sapiente necessitatibus!
                                            </div>
                                        </div>
                                    </div>
                             
                         
                        </div>
                    </div>
                </div>


                <!-- content-wrapper ends -->
                <!-- partial:../../partials/_footer.html -->
                @Html.Partial("~/Views/Shared/Footer2.cshtml")
                <!-- partial -->
            </div>
        </div>
        <!-- main-panel ends -->
    </div>
</div>
<!-- page-body-wrapper ends -->
<!--CRESTE USER DATA STARTS-->
<div class="modal fade" id="createModal" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            @using (Html.BeginForm("CreateRoute", "Home", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="modal-header">

                    <h5 class="modal-title" id="exampleModalLabel-4"><i class="mdi mdi-truck"></i> Add New Route</h5>
                    
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                    <div class="col-12 grid-margin">
                        <div class="card">
                            <div class="card-body">
                                <p class="card-description">
                                    <h4 class="card-title">Name</h4>
                                </p>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group row">

                                            <div class="col-sm-12">
                                                <input class="form-control" type="text" name="descriptionN" id="descriptionN" required />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>


                                <p class="card-description">
                                    <h4 class="card-title">Stores</h4>
                                </p>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group row">

                                            <div class="col-sm-12">
                                                <input class="form-control" type="hidden" name="listatiendas" id="storesmulti" value="" style="width:100%;" />

                                                <input type="checkbox" id="checkbox" hidden />


                                                <button type="button" id="showValue" hidden>Show Value</button>

                                                <div id="output" hidden>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <p class="card-description">
                                    <h4 class="card-title">Date</h4>
                                </p>
                                <div class="row">

                                    <div class="col-md-12">
                                        <div class="form-group row">
                                            <div class="col-sm-12">
                                                <input type="date" name="date" class="form-control">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <p class="card-description">
                                    <h4 class="card-title">Estimated completion date</h4>
                                </p>
                                <div class="row">

                                    <div class="col-md-12">
                                        <div class="form-group row">
                                            <div class="col-sm-12">
                                                <input type="date" name="enddate" class="form-control">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <p class="card-description">
                                    <h4 class="card-title">Activities to show</h4>
                                </p>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group row">

                                            <div class="col-sm-12">
                                                <input class="form-control" type="hidden" id="typesAmulti" value="" name="listatiposactividades" style="width:100%;" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <p class="card-description">
                                    <h4 class="card-title">Representatives</h4>
                                </p>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group row">

                                            <div class="col-sm-12">
                                                <input class="form-control" type="hidden" id="repmulti" value="" name="listarepresentantes" style="width:100%;" />

                                                <input type="checkbox" id="checkboxrep" hidden />


                                                <button type="button" id="showValuerep" hidden>Show Value</button>

                                                <div id="outputrep" hidden>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>



                            </div>
                        </div>
                    </div>

                
                <div class="modal-footer">
                    <button type="submit" class="btn btn-info">Save</button>
                    <button type="button" class="btn btn-light" data-dismiss="modal">Cancel</button>
                </div>
            }
        </div>
    </div>
</div>
<!--CREATE USER DATA ENDS-->

