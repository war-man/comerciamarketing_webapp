@model comerciamarketing_webapp.Models.Recursos_usuario

@{
    ViewBag.Title = "Comercia Marketing";
}

<div class="container single_product_container">
    <div class="row">
        <div class="col">

            <!-- Breadcrumbs -->

            <div class="breadcrumbs d-flex flex-row align-items-center">
                <ul>
                    <li><a href="@Url.Action("Main", "Home")">Home</a></li>
                    <li class="active"><a href="@Url.Action("Index", "Usuarios")"><i class="fa fa-angle-right" aria-hidden="true"></i>Users</a></li>

                </ul>
            </div>

            <h3>¿Are you sure you want to delete this resource?</h3>
            <div>
                
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        Description
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.descripcion)
                    </dd>
                    <dt>
                        Url
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.url)
                    </dd>

                    <dt>
                        Last update
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.fultima_actualizacion)
                    </dd>

                    <dt>
                        Resource
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.tipo_recurso.descripcion)
                    </dd>

                </dl>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Delete" class="btn btn-default" /> |
                        <a href="@Url.Action("Index", "Recursos_usuario",new { id=ViewBag.id_customer })">Back</a>
                    </div>
                }
            </div>
            </div>
</div>
</div>